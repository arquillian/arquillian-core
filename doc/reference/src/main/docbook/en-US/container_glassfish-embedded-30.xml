	<section id="container.glassfish-embedded-30.configuration">
		<title>Configuration</title>

		<para>
			Namespace: urn:arq:org.jboss.arquillian.glassfish.embedded60
		</para>
		<table frame="all">
			<title>Container Configuration Options</title>
			<tgroup cols="4">
